{
  "name": "@michaelstewart/convex-tanstack-db-collection",
  "version": "0.0.2",
  "description": "Convex collection adapter for TanStack DB with real-time sync",
  "author": "Michael Stewart",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michaelstewart/convex-tanstack-db-collection.git"
  },
  "bugs": {
    "url": "https://github.com/michaelstewart/convex-tanstack-db-collection/issues"
  },
  "homepage": "https://github.com/michaelstewart/convex-tanstack-db-collection#readme",
  "keywords": [
    "convex",
    "tanstack",
    "tanstack-db",
    "real-time",
    "sync",
    "collection"
  ],
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "tsc --noEmit",
    "test": "vitest run"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.1.0",
    "@tanstack/db": "^0.5.18",
    "convex": "^1.31.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "eslint-plugin-import-x": "^4.16.1",
    "prettier": "^3.8.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.53.1",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^3.0.0"
  }
}
